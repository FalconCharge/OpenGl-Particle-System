<emitter name="fire" num_particles="10000" duration="-1" type="continuous" birthrate="500">
    <!-- Spawn Properties -->
    <spawn_property name="velocity" type="random" min="-0.2,0.5,-0.2" max="0.2,1.5,0.2"/>
    <spawn_property name="color" type="constant" value="1,0.5,0,1"/> <!-- Orange color -->
    <spawn_property name="size" type="random" min="10" max="20"/>
    <spawn_property name="lifeTime" type="random" min="0.5" max="1.5"/>

    <!-- Additive Blending -->

    <!-- Scale Affector -->
    <affector type="scale">
        <property name="mode" value="OverLife"/>
        <property name="start" value="500"/>
        <property name="end" value="600"/> <!-- Slightly scale up over time -->
    </affector>

    <!-- Color Affector -->
    <affector type="color">
        <property name="mode" value="OverLife"/>
        <property name="start" value="1.0, 0.5, 0.0"/> <!-- Orange at birth -->
        <property name="end" value="1.0, 0.0, 0.0"/>  <!-- Fades to red -->
    </affector>

    <!-- Fade Affector -->
    <affector type="fade">
        <property name="mode" value="OverLife"/>
        <property name="start" value="1"/>   <!-- Fully opaque at start -->
        <property name="mid" value="0.90"/>   <!-- Partially transparent in the middle -->
        <property name="end" value="0"/>     <!-- Fully transparent at the end -->
    </affector>

    <affector type="turbulence">
        <property name="strength" value="2"/> <!-- Random movement -->
    </affector>



</emitter>